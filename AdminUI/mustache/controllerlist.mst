{{#Controllers}}
<div class="controller" data-id="{{ID}}">
  <div class="header">
    <span class="name">{{Name}}</span>
    <span class="count-box">
      <span class="count">{{Count}}</span>
      <button class="inc-count">+</button> / <button class="dec-count">-</button>
    </span>
  </div>
  <img src="{{baseURL}}{{Image}}" />
</div>
{{/Controllers}}
